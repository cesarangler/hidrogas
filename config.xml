<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hidrogas.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hidrogas Cuernavaca</name>
    <description>
        App de HidroGas de Cuernavaca para hacer pedidos de gas, reportar fugas, solicitar facturas y asesoría.
    </description>
    <author email="cesar@angler.mx" href="https://angler.mx">
       angler.mx
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="http://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon density="mdpi" src="www/images/mdpi.png" />
        <icon density="hdpi" src="www/images/hdpi.png" />
        <icon density="xhdpi" src="www/images/xhdpi.png" />
        <preference name="android-minSdkVersion" value="16" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
        <!-- iPhone 6 / 6+ -->
        <icon src="www/images/ios/icon-60@3x.png" platform="ios" width="180" height="180" />

        <!-- iPhone / iPod Touch  -->
        <icon src="www/images/ios/icon-60.png" platform="ios" width="60" height="60" />
        <icon src="www/images/ios/icon-60@2x.png" platform="ios" width="120" height="120" />

        <!-- iPad -->
        <icon src="www/images/ios/icon-76.png" platform="ios" width="76" height="76" />
        <icon src="www/images/ios/icon-76@2x.png" platform="ios" width="152" height="152" />
        <icon src="www/images/ios/icon-83.5@2x.png" platform="ios" width="167" height="167" />

        <!-- Settings Icon -->
        <icon src="www/images/ios/icon-small.png" platform="ios" width="29" height="29" />
        <icon src="www/images/ios/icon-small@2x.png" platform="ios" width="58" height="58" />
        <icon src="www/images/ios/icon-small@3x.png" platform="ios" width="87" height="87" />

        <!-- Spotlight Icon -->
        <icon src="www/images/ios/icon-40.png" platform="ios" width="40" height="40" />
        <icon src="www/images/ios/icon-40@2x.png" platform="ios" width="80" height="80" />
        <icon src="www/images/ios/icon-40@3x.png" platform="ios" width="120" height="120" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="CameraUsesGeolocation" value="true" />
    <preference name="phonegap-version" value="cli-8.0.0" />
    <plugin name="cordova-plugin-camera" spec="4.0.3" />
    <plugin name="cordova-plugin-ios-camera-permissions" spec="1.0.3" />
    <plugin name="cordova-plugin-media-capture" />
    <plugin name="cordova-plugin-console" spec="1.0.7" />
    <plugin name="cordova-plugin-geolocation" spec="2.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="1.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.2" />
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>Necesita acceso a la cámara</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>Necesita acceso a la librería de fotos</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>Necesita acceso a la localización</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryAddUsageDescription">
        <string>Necesita acceso a la librería de fotos</string>
    </edit-config>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.GeoBroker" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="http://api.phonegap.com/1.0/camera" />
    <feature name="http://api.phonegap.com/1.0/file" />
    <engine name="android" spec="~7.1.0" />
    <engine name="ios" spec="^4.5.5" />
</widget>
